generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  USER
  ADMIN
  GUEST
}

model User {
  id       Int    @id @default(autoincrement())
  firstname     String
  lastname    String
  email    String  @unique
  password String
  role      Role
}