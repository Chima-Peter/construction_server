generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int    @id @default(autoincrement())
  firstname String
  lastname  String
  email     String @unique
  password  String
  role      Role
}


model Project {
  id        Int    @id @default(autoincrement())
  name      String
  
}

enum Role {
  USER
  ADMIN
  GUEST
}
